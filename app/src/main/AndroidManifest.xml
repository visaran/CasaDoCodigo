<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.caelum.casadocodigo">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="br.com.caelum.casadocodigo_vinicius.application.CasaDoCodigoApplication"
        android:allowBackup="true"
        android:icon="@drawable/casadocodigo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.caelum.casadocodigo_vinicius.activity.LoginActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.caelum.casadocodigo_vinicius.activity.MainActivity" />
        <activity android:name="br.com.caelum.casadocodigo_vinicius.activity.CarrinhoActivity" />
    </application>

</manifest>